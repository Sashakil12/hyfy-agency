---
import type { BlogPost } from '../../lib/strapi';
import { getImageUrl, formatDate } from '../../lib/strapi';

interface Props {
  post: BlogPost;
  index: number;
}

const { post, index } = Astro.props;
const imageUrl = getImageUrl(post.featuredImage);
const formattedDate = formatDate(post.publishedDate);

// Determine card size based on index for bento grid effect
const isLarge = index % 7 === 0; // Every 7th card is large
const isMedium = index % 5 === 0 && !isLarge; // Every 5th card is medium
---

<article
  class:list={[
    'group relative overflow-hidden rounded-2xl cursor-pointer',
    'bg-white/[0.03] backdrop-blur-md border border-white/10',
    'hover:border-[#88FF66]/30 transition-all duration-300',
    'hover:shadow-[0_0_30px_rgba(136,255,102,0.15)]',
    {
      'md:col-span-2 md:row-span-2': isLarge,
      'md:col-span-2': isMedium && !isLarge,
    }
  ]}
  style="opacity: 0;"
>
  <a href={`/blog/${post.slug}`} class="block h-full">
    <!-- Featured Image with Overlay -->
    <div class:list={[
      'relative overflow-hidden bg-charcoal',
      {
        'h-64 md:h-96': isLarge,
        'h-56 md:h-72': isMedium,
        'h-48': !isLarge && !isMedium,
      }
    ]}>
      <img
        src={imageUrl}
        alt={post.featuredImage?.alternativeText || post.title}
        loading="lazy"
        class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
      />

      <!-- Gradient Overlay -->
      <div class="absolute inset-0 bg-gradient-to-t from-obsidian via-obsidian/50 to-transparent"></div>

      <!-- Reading Time Badge -->
      <div class="absolute top-4 right-4 px-3 py-1.5 rounded-full
                  bg-lime/90 backdrop-blur-sm text-obsidian text-xs font-semibold uppercase tracking-wide
                  shadow-[0_0_15px_rgba(136,255,102,0.4)]">
        {post.readingTime} min read
      </div>

      <!-- Glow Effect on Hover -->
      <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-300
                  bg-gradient-to-br from-lime/10 via-transparent to-amber/10 pointer-events-none">
      </div>
    </div>

    <!-- Content -->
    <div class="p-6 md:p-8">
      <!-- Categories -->
      {post.categories && post.categories.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-3">
          {post.categories.slice(0, 2).map((category) => (
            <span
              class="px-2 py-1 rounded-full text-xs font-semibold uppercase tracking-wider
                     border transition-all duration-200"
              style={`
                background: ${category.color || '#88FF66'}15;
                border-color: ${category.color || '#88FF66'}50;
                color: ${category.color || '#88FF66'};
              `}>
              {category.name}
            </span>
          ))}
        </div>
      )}

      <!-- Meta Information -->
      <div class="flex items-center gap-4 mb-4 text-sm text-luminous-tertiary">
        <time datetime={post.publishedDate} class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          {formattedDate}
        </time>
        {post.author && (
          <>
            <span class="text-lime/30">â€¢</span>
            <span class="flex items-center gap-2">
              {post.author.avatar && (
                <img
                  src={getImageUrl(post.author.avatar)}
                  alt={post.author.name}
                  class="w-4 h-4 rounded-full object-cover"
                />
              )}
              <svg class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
              </svg>
              {post.author.name}
            </span>
          </>
        )}
      </div>

      <!-- Title -->
      <h3 class:list={[
        'font-orbitron font-semibold mb-3 uppercase tracking-wide',
        'text-white group-hover:text-lime transition-colors duration-200',
        {
          'text-2xl md:text-3xl lg:text-4xl': isLarge,
          'text-xl md:text-2xl': isMedium,
          'text-lg md:text-xl': !isLarge && !isMedium,
        }
      ]}>
        {post.title}
      </h3>

      <!-- Excerpt -->
      <p class:list={[
        'text-luminous-tertiary leading-relaxed mb-4',
        {
          'text-base md:text-lg line-clamp-4': isLarge,
          'text-base line-clamp-3': isMedium,
          'text-sm line-clamp-2': !isLarge && !isMedium,
        }
      ]}>
        {post.excerpt}
      </p>

      <!-- Tags -->
      {post.tags && post.tags.length > 0 && (
        <div class="flex flex-wrap gap-2 mb-4">
          {post.tags.slice(0, 3).map((tag: string) => (
            <span class="px-3 py-1 rounded-full text-xs font-medium
                         bg-white/[0.05] border border-white/10 text-lime">
              #{tag}
            </span>
          ))}
        </div>
      )}

      <!-- Read More Link -->
      <div class="flex items-center gap-2 text-lime font-semibold uppercase text-sm tracking-wide
                  group-hover:gap-3 transition-all duration-200">
        Read Article
        <svg class="w-5 h-5 transition-transform duration-200 group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
        </svg>
      </div>
    </div>

    <!-- Light Sweep Effect on Hover -->
    <div class="absolute inset-0 opacity-0 group-hover:opacity-100 transition-opacity duration-500 pointer-events-none">
      <div class="absolute inset-0 bg-gradient-to-br from-transparent via-white/5 to-transparent
                  transform -translate-x-full group-hover:translate-x-full transition-transform duration-1000"
           style="background: linear-gradient(45deg, transparent 30%, rgba(255,255,255,0.05) 50%, transparent 70%);">
      </div>
    </div>
  </a>
</article>

<style>
  .font-orbitron {
    font-family: 'Orbitron', sans-serif;
  }

  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  .line-clamp-4 {
    display: -webkit-box;
    -webkit-line-clamp: 4;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
