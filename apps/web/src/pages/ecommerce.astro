---
import '../styles/global.css'
import { EcommerceHeroSection } from '@/components/sections/EcommerceHeroSection'
import { EcommerceFeaturesSection } from '@/components/sections/EcommerceFeaturesSection'
import { EcommerceStackSection } from '@/components/sections/EcommerceStackSection'
import { EcommerceCTASection } from '@/components/sections/EcommerceCTASection'
import { Footer } from '@/components/Footer'
import GlobalHeader from '../components/GlobalHeader'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		{/* Primary Meta Tags */}
		<title>Custom Ecommerce Development | Hyfy Agency - Headless Commerce Solutions</title>
		<meta name="title" content="Custom Ecommerce Development | Hyfy Agency - Headless Commerce Solutions" />
		<meta name="description" content="Custom headless ecommerce solutions with 3x faster load times and 40% higher conversion rates. Shopify Plus, Commerce.js, and custom builds. Go beyond template limitations." />
		<meta name="keywords" content="custom ecommerce, headless commerce, Shopify development, online store, ecommerce platform, headless CMS, PWA ecommerce, custom checkout" />
		<meta name="author" content="Hyfy Agency" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		{/* Open Graph / Facebook */}
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hyfy.agency/ecommerce" />
		<meta property="og:title" content="Custom Ecommerce Development | Hyfy Agency - Headless Commerce Solutions" />
		<meta property="og:description" content="Custom headless ecommerce solutions with 3x faster load times and 40% higher conversion rates. Go beyond template limitations." />
		<meta property="og:image" content="https://hyfy.agency/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Hyfy Agency" />
		<meta property="og:locale" content="en_US" />

		{/* Twitter */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content="https://hyfy.agency/ecommerce" />
		<meta name="twitter:title" content="Custom Ecommerce Development | Hyfy Agency - Headless Commerce Solutions" />
		<meta name="twitter:description" content="Custom headless ecommerce solutions with 3x faster load times and 40% higher conversion rates. Go beyond template limitations." />
		<meta name="twitter:image" content="https://hyfy.agency/og-image.jpg" />

		{/* Additional Meta Tags */}
		<meta name="theme-color" content="#050505" />
		<meta name="msapplication-TileColor" content="#050505" />
		<link rel="canonical" href="https://hyfy.agency/ecommerce" />

		{/* Futuristic Fonts - Orbitron + Rajdhani */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&family=Inter+Tight:wght@400;500;600;700;800;900&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<GlobalHeader client:load currentPath="/ecommerce" />
		<div class="pt-20">
			<EcommerceHeroSection client:load />
			<EcommerceFeaturesSection client:load />
			<EcommerceStackSection client:load />
			<EcommerceCTASection client:load />
			<Footer client:load />
		</div>
	</body>
</html>
