---
import '../styles/global.css'
import { HeroSection } from '@/components/sections/HeroSection'
import { JourneySection } from '@/components/sections/JourneySection'
import { ExpertiseSection } from '@/components/sections/ExpertiseSection'
import { SocialProofSection } from '@/components/sections/SocialProofSection'
import { ProcessSection } from '@/components/sections/ProcessSection'
import { CTASection } from '@/components/sections/CTASection'
import { Footer } from '@/components/Footer'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		{/* Primary Meta Tags */}
		<title>Hyfy Agency - From Idea to MVP in 65% Less Time</title>
		<meta name="title" content="Hyfy Agency - From Idea to MVP in 65% Less Time" />
		<meta name="description" content="Full-stack development agency with AI-assisted workflows. Build custom ERPs, AI-native apps, SaaS products, and e-commerce platforms 65% faster to MVP." />
		<meta name="keywords" content="full-stack development, AI-assisted development, MVP development, custom ERP, AI-native apps, SaaS development, rapid prototyping, hyper prototyping" />
		<meta name="author" content="Hyfy Agency" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		{/* Open Graph / Facebook */}
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hyfy.agency/" />
		<meta property="og:title" content="Hyfy Agency - From Idea to MVP in 65% Less Time" />
		<meta property="og:description" content="Full-stack development agency with AI-assisted workflows. Build custom ERPs, AI-native apps, SaaS products, and e-commerce platforms 65% faster to MVP." />
		<meta property="og:image" content="https://hyfy.agency/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Hyfy Agency" />
		<meta property="og:locale" content="en_US" />

		{/* Twitter */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content="https://hyfy.agency/" />
		<meta name="twitter:title" content="Hyfy Agency - From Idea to MVP in 65% Less Time" />
		<meta name="twitter:description" content="Full-stack development agency with AI-assisted workflows. Build custom ERPs, AI-native apps, SaaS products, and e-commerce platforms 65% faster to MVP." />
		<meta name="twitter:image" content="https://hyfy.agency/og-image.jpg" />

		{/* Additional Meta Tags */}
		<meta name="theme-color" content="#050505" />
		<meta name="msapplication-TileColor" content="#050505" />
		<link rel="canonical" href="https://hyfy.agency/" />

		{/* Futuristic Fonts - Orbitron + Rajdhani */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<HeroSection client:only="react" />
		<JourneySection client:only="react" />
		<ExpertiseSection client:only="react" />
		<SocialProofSection client:only="react" />
		<ProcessSection client:only="react" />
		<CTASection client:only="react" />
		<Footer />
	</body>
</html>
