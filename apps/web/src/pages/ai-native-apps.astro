---
import '../styles/global.css'
import { AiNativeHeroSection } from '@/components/sections/AiNativeHeroSection'
import { AiNativeFeaturesSection } from '@/components/sections/AiNativeFeaturesSection'
import { AiNativeUseCasesSection } from '@/components/sections/AiNativeUseCasesSection'
import { AiNativeCTASection } from '@/components/sections/AiNativeCTASection'
import { Footer } from '@/components/Footer'
import GlobalHeader from '../components/GlobalHeader'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		{/* Primary Meta Tags */}
		<title>AI Native Apps | Hyfy Agency - Intelligent Applications Built for the Future</title>
		<meta name="title" content="AI Native Apps | Hyfy Agency - Intelligent Applications Built for the Future" />
		<meta name="description" content="Build AI-native applications 65% faster. LLM integration, predictive analytics, custom AI models trained on your data. Full-stack AI development from strategy to deployment." />
		<meta name="keywords" content="AI native apps, AI application development, LLM integration, custom AI models, GPT integration, AI-powered apps, machine learning, AI consulting" />
		<meta name="author" content="Hyfy Agency" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		{/* Open Graph / Facebook */}
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hyfy.agency/ai-native-apps" />
		<meta property="og:title" content="AI Native Apps | Hyfy Agency - Intelligent Applications Built for the Future" />
		<meta property="og:description" content="Build AI-native applications 65% faster. LLM integration, predictive analytics, custom AI models trained on your data. Full-stack AI development from strategy to deployment." />
		<meta property="og:image" content="https://hyfy.agency/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Hyfy Agency" />
		<meta property="og:locale" content="en_US" />

		{/* Twitter */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content="https://hyfy.agency/ai-native-apps" />
		<meta name="twitter:title" content="AI Native Apps | Hyfy Agency - Intelligent Applications Built for the Future" />
		<meta name="twitter:description" content="Build AI-native applications 65% faster. LLM integration, predictive analytics, custom AI models trained on your data. Full-stack AI development from strategy to deployment." />
		<meta name="twitter:image" content="https://hyfy.agency/og-image.jpg" />

		{/* Additional Meta Tags */}
		<meta name="theme-color" content="#050505" />
		<meta name="msapplication-TileColor" content="#050505" />
		<link rel="canonical" href="https://hyfy.agency/ai-native-apps" />

		{/* Futuristic Fonts - Orbitron + Rajdhani */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&family=Inter+Tight:wght@400;500;600;700;800;900&family=Plus+Jakarta+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<GlobalHeader client:load currentPath="/ai-native-apps" />

		<div class="pt-20">
			<AiNativeHeroSection client:load />
			<AiNativeFeaturesSection client:load />
			<AiNativeUseCasesSection client:load />
			<AiNativeCTASection client:load />
			<Footer client:load />
		</div>
	</body>
</html>
