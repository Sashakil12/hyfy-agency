---
import '../styles/global.css'
import { CmsPrototypesHeroSection } from '@/components/sections/CmsPrototypesHeroSection'
import { CmsPrototypesFeaturesSection } from '@/components/sections/CmsPrototypesFeaturesSection'
import { CmsPrototypesStackSection } from '@/components/sections/CmsPrototypesStackSection'
import { CmsPrototypesCTASection } from '@/components/sections/CmsPrototypesCTASection'
import { Footer } from '@/components/Footer'
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="generator" content={Astro.generator} />

		{/* Primary Meta Tags */}
		<title>CMS Prototypes | Hyfy Agency - Content-Driven Development at Speed</title>
		<meta name="title" content="CMS Prototypes | Hyfy Agency - Content-Driven Development at Speed" />
		<meta name="description" content="Strapi, Directus, and Payload expertise. Build custom content types, API-first architecture, and admin panels. Content-driven development at unprecedented speed." />
		<meta name="keywords" content="CMS development, Strapi, Directus, Payload, headless CMS, custom content types, API-first, admin panel customization" />
		<meta name="author" content="Hyfy Agency" />
		<meta name="robots" content="index, follow" />
		<meta name="language" content="English" />

		{/* Open Graph / Facebook */}
		<meta property="og:type" content="website" />
		<meta property="og:url" content="https://hyfy.agency/cms-prototypes" />
		<meta property="og:title" content="CMS Prototypes | Hyfy Agency - Content-Driven Development at Speed" />
		<meta property="og:description" content="Strapi, Directus, and Payload expertise. Build custom content types, API-first architecture, and admin panels. Content-driven development at unprecedented speed." />
		<meta property="og:image" content="https://hyfy.agency/og-image.jpg" />
		<meta property="og:image:width" content="1200" />
		<meta property="og:image:height" content="630" />
		<meta property="og:site_name" content="Hyfy Agency" />
		<meta property="og:locale" content="en_US" />

		{/* Twitter */}
		<meta name="twitter:card" content="summary_large_image" />
		<meta name="twitter:url" content="https://hyfy.agency/cms-prototypes" />
		<meta name="twitter:title" content="CMS Prototypes | Hyfy Agency - Content-Driven Development at Speed" />
		<meta name="twitter:description" content="Strapi, Directus, and Payload expertise. Build custom content types, API-first architecture, and admin panels. Content-driven development at unprecedented speed." />
		<meta name="twitter:image" content="https://hyfy.agency/og-image.jpg" />

		{/* Additional Meta Tags */}
		<meta name="theme-color" content="#050505" />
		<meta name="msapplication-TileColor" content="#050505" />
		<link rel="canonical" href="https://hyfy.agency/cms-prototypes" />

		{/* Futuristic Fonts - Orbitron + Rajdhani */}
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;500;600;700;800;900&family=Rajdhani:wght@300;400;500;600;700&display=swap" rel="stylesheet" />
	</head>
	<body>
		<CmsPrototypesHeroSection client:load />
		<CmsPrototypesFeaturesSection client:load />
		<CmsPrototypesStackSection client:load />
		<CmsPrototypesCTASection client:load />
		<Footer client:load />
	</body>
</html>
